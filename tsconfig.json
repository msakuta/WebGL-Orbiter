{
    "compilerOptions": {
      "outDir": "./dist/",
      "sourceMap": true,
      "noImplicitAny": true,
      "module": "esnext",
      "target": "es6",
      "moduleResolution": "node",
      "allowJs": true,
      "allowSyntheticDefaultImports" : true,
      "esModuleInterop" : true,
      "baseUrl": "src"
    },
    "include": [
      "src/**/*",
      "types/**/*"
    ]
}